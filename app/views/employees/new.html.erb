<h1> Create a soul and play god (or satan, whichever you prefer. It's all the same) </h1>
<%= form_tag "/employees", method: :post do %>
  <div>
    <%= label_tag :input_form_first_name %>
    <%= text_field_tag :input_form_first_name %>
  </div>
  <div>
    <%= label_tag :input_form_last_name %>
    <%= text_field_tag :input_form_last_name %>
  </div>
  <div>
    <%= label_tag :input_form_email %>
    <%= text_field_tag :input_form_email %>
  </div>
  <div>
  <%= submit_tag "Create Soul" %>
  </div>
<%end%>